<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_tab"
    android:orientation="horizontal"
    android:paddingStart="@dimen/space_12"
    android:paddingTop="@dimen/space_8"
    android:paddingEnd="@dimen/space_4"
    android:paddingBottom="@dimen/space_8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarCoachSessionPractitioner"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_default_image_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNameCoachSessionPractitioner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/space_8"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="KO Huyn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnDeleteCoachSessionPractitioner"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_4"
        android:padding="@dimen/space_4"
        android:src="@drawable/ic_delete_simple" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnDragCoachSessionPractitioner"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_4"
        android:padding="@dimen/space_8"
        android:src="@drawable/ic_drag_simple" />
</LinearLayout>