<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemRankNumberCoachSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/clr_tab"
            android:gravity="center"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_40sdp"
            android:paddingBottom="@dimen/space_4"
            android:textAppearance="@style/FontAnTon"
            android:textSize="@dimen/text_18"
            tools:text="#1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemScorePersonRankCoachSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space_8"
            android:textAppearance="@style/FontAnTon"
            android:textColor="@color/clr_gradient_orange_start"
            android:textSize="@dimen/text_16"
            tools:text="9" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemNamePersonCoachSession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:singleLine="true"
            android:textAppearance="@style/FontAnTon"
            android:textColor="@color/clr_dark_bg"
            android:textSize="@dimen/text_14"
            app:textAllCaps="true"
            tools:text="NGUYỄN TRẦN DUY NHẤT" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgItemAvatarPersonCoachSession"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            tools:src="@color/clr_background" />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        android:padding="@dimen/space_4"
        app:flexDirection="row"
        app:flexWrap="wrap"></com.google.android.flexbox.FlexboxLayout>
</LinearLayout>