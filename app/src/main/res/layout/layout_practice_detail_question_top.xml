<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_tab"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutHideQuestionTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_4"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleQuestionTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/FontAnTon"
            tools:text="Bai tap 1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_eye_open" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/layoutShowQuestionTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_12"
        android:paddingTop="@dimen/space_8"
        android:paddingEnd="@dimen/space_12"
        android:paddingBottom="@dimen/space_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNameExerciseQuestionTop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/FontAnTon"
                tools:text="Bài tập: UpperCut" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/visibilityQuestionTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_4"
                android:src="@drawable/ic_view_eye" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleMasterQuestionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coach" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnMasterQuestionTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatarCoachQuestionTop"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/background_circle_gradient_purple"
                android:padding="@dimen/_1sdp" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_8"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="space_between">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNameCoachQuestionTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textAppearance="@style/FontAnTon"
                    android:textSize="@dimen/text_14"
                    app:layout_alignSelf="center"
                    app:textAllCaps="true"
                    tools:text="NGUYỄN TRẦN DUY NHẤT" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnReceiveMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_orange"
                    android:drawableStart="@drawable/ic_belt"
                    android:drawablePadding="@dimen/space_4"
                    android:paddingStart="@dimen/space_4"
                    android:paddingEnd="@dimen/space_4"
                    android:text="@string/receive_master" />
            </com.google.android.flexbox.FlexboxLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLevelQuestionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            tools:text="Level: thách đấu" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSubjectQuestionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            tools:text="Môn phái: Karate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCreateAtQuestionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            tools:text="Ngày tạo: 20-01-2019" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCountPeoplePracticeQuestionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            tools:text="Số người tập: 30" />
    </LinearLayout>
</LinearLayout>