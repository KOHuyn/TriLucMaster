<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/clr_tab"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCoachDraftThumb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_default_image_rectangle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleCoachDraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#202020"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="2"
            android:padding="@dimen/space_4"
            android:textSize="@dimen/text_10"
            tools:text="BÃ i 1:  UpperCut UpperCut" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnDeleteCoachDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/space_8"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delete_item" />
</FrameLayout>
