<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginEnd="@dimen/space_8"
        android:background="@color/clr_tab"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_12"
        android:paddingTop="@dimen/space_4"
        android:paddingEnd="@dimen/space_12"
        android:paddingBottom="@dimen/space_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleInfoBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tên: Upper Cut" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNameCoachInfoBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Huấn luyện viên: Nguyễn Trần Duy Nhất" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNameLevelInfoBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Level: thách đấu " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNoteInfoBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lưu ý:  Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s." />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginBottom="@dimen/space_4"
            android:background="@color/clr_grey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTutorialInfoBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Hướng dẫn:\nChiêu thức 1\nLorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s\nChiêu thức 2\nLorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>