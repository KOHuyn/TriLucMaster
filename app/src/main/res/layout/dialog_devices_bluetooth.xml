<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_tab">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space_4">

                <TextView
                    android:id="@+id/btnRetryScanBle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_stroke_white_radius_2"
                    android:gravity="center"
                    android:paddingStart="@dimen/space_4"
                    android:paddingEnd="@dimen/space_4"
                    android:text="@string/retry"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/isScanningBle"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/space_8"
                android:text="@string/connect_with_device" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCancelScanBle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_8"
                app:srcCompat="@drawable/ic_cancel" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_12"
            android:paddingEnd="@dimen/space_12">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvDeviceBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_200sdp"
                tools:itemCount="1"
                tools:listitem="@layout/item_bluetooth_device" />


            <TextView
                android:id="@+id/msgScanningBle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scanning_device_recently"
                android:textColor="@color/clr_tab" />
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
