<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_75sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPower"
        style="@style/FontAnTon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@drawable/rouned_line_power"
        android:gravity="center"
        android:textColor="@color/clr_red"
        android:textSize="@dimen/text_12"
        tools:text="150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/clr_tab"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagePosition"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_leg_right" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/rouned_line_power"
            android:gravity="center_horizontal"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/clr_tab"
            android:textSize="@dimen/text_8"
            tools:text="00’’04" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeLine"
        style="@style/FontAnTon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="start"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/clr_tab"
        android:textSize="@dimen/text_8"
        tools:text="00:00" />


</LinearLayout>