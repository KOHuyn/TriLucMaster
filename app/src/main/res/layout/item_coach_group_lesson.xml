<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_tab"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCoachGroupLesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxHeight="@dimen/_120sdp"
            android:minHeight="@dimen/_70sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_image_rectangle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCategoryCoachGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/clr_red"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:textSize="@dimen/text_8"
            tools:text="Bài tập" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTitleCoachGroupLesson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/FontAnTon"
                android:textSize="@dimen/text_12"
                tools:text="Động tác tay" />

<!--            <androidx.appcompat.widget.AppCompatImageView-->
<!--                android:id="@+id/btnDeleteCoachGroupLesson"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:padding="@dimen/space_4"-->
<!--                android:src="@drawable/ic_close_red"-->
<!--                tools:visibility="visible" />-->
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDescriptionCoachGroupLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textSize="@dimen/text_12"
            tools:text="Lorem ipsum dolor sit amet, cons ectetur adipiscing elit..." />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDateCoachGroupLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_10"
                tools:text="03/02/2020" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCountExerciseCoachGroupLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_4"
                android:drawableStart="@drawable/ic_dot"
                android:drawablePadding="@dimen/space_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_10"
                tools:text="5 bài tập" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDiscipleCoachGroupLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:drawableStart="@drawable/ic_dot"
                android:drawablePadding="@dimen/space_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_10"
                tools:text="12 người tập" />
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</LinearLayout>