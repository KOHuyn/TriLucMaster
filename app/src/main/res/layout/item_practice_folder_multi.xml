<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/space_4"
        android:alpha="0.6"
        android:background="#C8C8C8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFolderMultiPractice2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_image_rectangle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Bài 1:  UpperCut UpperCut" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Lor In viverra pharetra in commodo. Sit quis." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/space_2"
        android:layout_marginTop="@dimen/space_2"
        android:layout_marginEnd="@dimen/space_2"
        android:alpha="0.8"
        android:background="#C8C8C8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFolderMultiPractice1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_image_rectangle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Bài 1:  UpperCut UpperCut" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Lor In viverra pharetra in commodo. Sit quis." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginEnd="@dimen/space_4"
        android:background="#C8C8C8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFolderMultiPractice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_image_rectangle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFolderTitleMultiPractice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Bài 1:  UpperCut UpperCut" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFolderContentMultiPractice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_12"
                tools:text="Lor In viverra pharetra in commodo. Sit quis." />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>