<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentVideoThree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/clr_tab">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBackToHomeStep3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/space_16"
            android:src="@drawable/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/anton_regular"
            android:text="@string/video_edit_article"
            android:textAppearance="@style/FontAnTon"
            android:textSize="@dimen/text_18"
            app:textAllCaps="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:paddingBottom="@dimen/space_4">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_4"
                android:text="@string/video_label_status"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spStatusEditVideoThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/clr_light_grey"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:hint="@string/select_status"
                android:padding="@dimen/space_4"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_4"
                android:text="@string/video_fight_option_label"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spSubjectEditVideoThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/clr_light_grey"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:hint="@string/select_subject"
                android:padding="@dimen/space_4"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_4"
                android:text="@string/video_fight_level"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spLevelEditVideoThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/clr_light_grey"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:hint="@string/select_level"
                android:padding="@dimen/space_4"
                android:textColor="@color/clr_tab"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelFightSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_4"
                android:text="@string/video_fight_summary"
                android:textAppearance="@style/FontAnTon"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnUploadPhotoEditVideoThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/clr_light_grey"
                android:minHeight="@dimen/_180sdp"
                android:scaleType="center"
                android:src="@drawable/ic_photo" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutBottomNextBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/clr_tab"
        android:paddingStart="@dimen/space_16"
        android:paddingTop="@dimen/space_8"
        android:paddingEnd="@dimen/space_16"
        android:paddingBottom="@dimen/space_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnBackToStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_primary_radius_4"
            android:gravity="center"
            android:minWidth="@dimen/_60sdp"
            android:paddingStart="@dimen/space_8"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_8"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/previous"
            android:textAppearance="@style/FontAnTon"
            android:textSize="@dimen/text_12" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_video_bottom_three" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnNextToStepFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_primary_radius_4"
            android:gravity="center"
            android:minWidth="@dimen/_60sdp"
            android:paddingStart="@dimen/space_8"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_8"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/next"
            android:textAppearance="@style/FontAnTon"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>