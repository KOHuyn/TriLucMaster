<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_16"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPracticeWithVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/clr_tab"
        android:drawablePadding="@dimen/space_8"
        android:gravity="center"
        android:padding="@dimen/space_12"
        android:text="@string/practice_with_video"
        android:textAppearance="@style/FontAnTon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPracticeNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/clr_tab"
        android:drawablePadding="@dimen/space_8"
        android:gravity="center"
        android:padding="@dimen/space_12"
        android:text="@string/practice_normal"
        android:textAppearance="@style/FontAnTon" />
</LinearLayout>