<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_tab">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNameItemMenuOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_practice"
        android:drawablePadding="@dimen/space_8"
        android:gravity="center"
        android:padding="@dimen/space_12"
        android:textAppearance="@style/FontAnTon"
        tools:text="Tạo thư mục mới" />

    <View
        android:id="@+id/viewLineMenuOption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_12"
        android:background="#2A2E43" />
</FrameLayout>


