<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/space_4">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarMemberGroup"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_default_image_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNameMemberGroup"
        style="@style/FontAnTon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/space_12"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textColor="@color/clr_tab"
        android:textSize="@dimen/text_18"
        tools:text="Cung Lee" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMenuDisciple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/space_16"
        android:src="@drawable/ic_menu_three_dots" />

</androidx.appcompat.widget.LinearLayoutCompat>