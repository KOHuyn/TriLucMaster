<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/space_8"
    android:paddingEnd="@dimen/space_4"
    tools:background="@color/clr_dark_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitlePractice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/FontAnTon"
        android:textSize="@dimen/text_14"
        tools:text="Bài tập của tôi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMorePractice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:paddingStart="@dimen/space_20"
        android:paddingEnd="@dimen/space_2"
        android:paddingTop="@dimen/space_12"
        android:paddingBottom="@dimen/space_8"
        android:text="@string/more"
        android:textSize="@dimen/text_12" />
</LinearLayout>