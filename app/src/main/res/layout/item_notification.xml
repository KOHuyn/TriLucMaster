<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgNotification"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
        android:background="@color/clr_tab"
        android:minHeight="@dimen/_60sdp"
        android:src="@drawable/ic_default_image_rectangle"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="@dimen/space_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            tools:text="FLOYD MAYWEATHER Vs LOGAN PAUL " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtContentNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/text_10"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. has been ..." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDateCreatedNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:ellipsize="end"
            android:textColor="@color/clr_tab"
            android:textSize="@dimen/text_8"
            tools:text="10:20 14/2/2020" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgIsReadNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/clr_tab"
        android:padding="@dimen/space_4"
        android:src="@drawable/ic_dot"
        android:tint="@color/clr_tab" />
</LinearLayout>