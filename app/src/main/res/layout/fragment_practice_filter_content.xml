<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_background"
    android:orientation="vertical">

    <include
        android:id="@+id/noDataPracticeFilterContent"
        layout="@layout/no_data"
        android:visibility="gone" />

    <com.mobileplus.dummytriluc.ui.widget.CustomSwipeRcv
        android:id="@+id/rcvPracticeFilterContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="@dimen/space_8" />

    <include
        android:id="@+id/loadMorePracticeFilterContent"
        layout="@layout/layout_loading_dialog_default"
        android:visibility="gone" />
</LinearLayout>