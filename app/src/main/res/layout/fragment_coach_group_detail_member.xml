<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_12"
    android:paddingEnd="@dimen/space_12">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/spStatisticalCoachGroupMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_8"
        android:background="@color/white"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:padding="@dimen/space_6"
        android:text="@string/statistics_day"
        android:textColor="@color/clr_tab" />

    <include
        android:id="@+id/noDataGroupMember"
        layout="@layout/no_data"
        android:visibility="gone" />

    <com.mobileplus.dummytriluc.ui.widget.CustomSwipeRcv
        android:id="@+id/rcvGroupMember"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <include
        android:id="@+id/loadMoreGroupMember"
        layout="@layout/layout_loading_dialog_default"
        android:visibility="gone" />
</androidx.appcompat.widget.LinearLayoutCompat>