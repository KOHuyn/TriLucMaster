<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DummyTriLuc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clr_gradient_purple_start</item>
        <item name="colorPrimaryVariant">@color/clr_secondary</item>
        <item name="colorOnPrimary">@color/clr_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clr_secondary</item>
        <item name="colorSecondaryVariant">@color/clr_secondary</item>
        <item name="colorOnSecondary">@color/clr_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/clr_tab</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/FontMetrophobic</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="SplashTheme" parent="Theme.DummyTriLuc">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MainWindowBackground" parent="Theme.DummyTriLuc">
        <item name="android:windowBackground">@drawable/bg_reload_language</item>
    </style>
</resources>